<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="15sp"
    tools:context=".ActivityListMetiers">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="350dp"
        android:layout_height="174dp"
        android:background="@drawable/grid_bg"
        android:elevation="4dp"
        app:columnCount="6"
        app:rowCount="3">

        <ImageView
            android:id="@+id/imageOuvrier"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/img_bg"
            android:scaleType="centerCrop"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowSpan="3"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/ouvrier" />

        <TextView
            android:id="@+id/tv_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald_light"
            android:gravity="center"
            android:text="Nom"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_columnSpan="4"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_marginLeft="2dp"
            android:padding="3sp"
            app:layout_column="1"
            app:layout_gravity="right"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/rating_icon1313" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rating"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1"
            android:fontFamily="@font/oswald_light"
            />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_margin="10sp"
            app:layout_column="3"
            app:layout_row="1"
            app:srcCompat="@drawable/check" />

        <TextView
            android:id="@+id/tv_occurence"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="NWork"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_column="4"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1"
            android:fontFamily="@font/oswald_light"
            />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="10dp"
            android:padding="5sp"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/available2" />

        <TextView
            android:id="@+id/tv_dispo"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:text="Disponibilte"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_columnSpan="3"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:fontFamily="@font/oswald_light"
            />


    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>