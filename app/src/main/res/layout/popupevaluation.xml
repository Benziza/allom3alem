<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="528dp"
        android:orientation="vertical"

        android:padding="20sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="Evaluation de l'ouvrier"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:orientation="horizontal" />

        <!-- La partie de l'évaluation -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="horizontal">

            <!--Le premier LinearLayout de radiogroup -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/black"
                        android:orientation="horizontal" />

                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="2"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/black"
                        android:orientation="horizontal" />

                    <RadioButton
                        android:id="@+id/radio3"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="3"
                        android:textSize="20dp"
                        android:textStyle="bold"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/black"
                        android:orientation="horizontal" />

                    <RadioButton
                        android:id="@+id/radio4"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/black"
                        android:orientation="horizontal" />

                    <RadioButton
                        android:id="@+id/radio5"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="5"
                        android:textSize="20dp"
                        android:textStyle="bold"


                        />

                </RadioGroup>

            </LinearLayout>

            <!--Le deuxieme LinearLayout du texte -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Médiocre"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"
                    android:orientation="horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Passable"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"
                    android:orientation="horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Assez-Bien"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"
                    android:orientation="horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Bien"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"
                    android:orientation="horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Très Bien"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
        <!--La fin de la partie de l'évaluation -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/btnEvaluerPop"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/customblue"
            android:gravity="center"
            android:text="Evaluer"
            android:textSize="20dp"
            android:onClick="evaluer"/>

    </LinearLayout>


</RelativeLayout>